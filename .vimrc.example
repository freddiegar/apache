set statusline+=%=
set statusline+=\%m
set statusline+=\%r
" set statusline+=\ ascii:%b
set statusline+=\ l:%3l/%3L\ c:%3c
set statusline+=\ %{&fileencoding?&fileencoding:&encoding}
